name: Run Script on Hostinger  

on:
  push:
    branches:
      - main  # Runs on every push/commit to main

jobs:
  run_script:
    runs-on: ubuntu-latest

    steps:
    - name: Run Script on Hostinger Server
      uses: appleboy/ssh-action@v0.1.6
      with:
        host: ${{ secrets.HOSTINGER_IP }}
        username: ${{ secrets.HOSTINGER_SSH_USER }}
        password: ${{ secrets.HOSTINGER_SSH_PASS }}
        port: ${{ secrets.HOSTINGER_PORT }}
        script: |
          echo "âœ… Connected to Hostinger Server"

          # Print the current working directory
          echo "ğŸ“Œ Current Directory:"
          pwd

          # Change to Laravel root folder
          cd /home/${{ secrets.HOSTINGER_USERNAME }}/public_html/fleet
          
          # Print the new working directory
          echo "ğŸ“Œ Now in Directory:"
          pwd

          # List all files and folders
          echo "ğŸ“‚ Listing files in fleet directory:"
          ls -lah  

          # Check if 'framework' folder exists
          if [ -d "framework" ]; then
            echo "âœ… framework folder exists"
            cd framework
          else
            echo "âŒ framework folder missing!"
            exit 1
          fi

          # Print the working directory inside framework
          echo "ğŸ“Œ Now in Framework Directory:"
          pwd

          # List all files inside framework
          echo "ğŸ“‚ Listing files in framework directory:"
          ls -lah

          # Check if artisan exists
          echo "ğŸ” Checking if artisan exists:"
          if [ -f "artisan" ]; then
            echo "âœ… Artisan file found!"
          else
            echo "âŒ Artisan file missing!"
            exit 1
          fi

          # Run Laravel Commands and Log Output
          echo "ğŸš€ Running Laravel Migrations & Clearing Cache"

          echo "ğŸ”„ Running: php artisan migrate --force"
          php artisan migrate --force

          echo "ğŸ§¹ Running: php artisan cache:clear"
          php artisan cache:clear

          echo "âš™ï¸ Running: php artisan config:clear"
          php artisan config:clear

          echo "ğŸ›  Running: php artisan route:clear"
          php artisan route:clear

          echo "ğŸ¨ Running: php artisan view:clear"
          php artisan view:clear

          echo "âœ… All commands executed successfully!"
